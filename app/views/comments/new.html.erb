
<h1 class="title is-1 h1-title"> タクニコ動画 </h1>

<div class="form-field">
  <%= form_with :class=>"field", model: @comment, url: comments_new_path do |f| %>
  <%= f.label "コメント入力" , :class=>"comments-label" %>
  <%= f.text_field :text ,:class=>"comments-form" %>
  <%= f.submit "コメント送信" , :class=>"submit-button" %>
  <% end %>
</div>
